<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
   			 android:layout_height="55dp"
   	 		android:background="@color/bright_green"
   			 android:gravity="center_vertical|center_horizontal"
        >

        <TextView
            android:id="@+id/title_tv"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流量管理"
           android:layout_centerVertical="true"
            android:textColor="@color/black" />
        
        
        <RadioGroup 
            android:id="@+id/radiogroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/blue"
            >
            
            <RadioButton 
                android:id="@+id/radiobutton1"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive降序"
                />
            <RadioButton 
                android:id="@+id/radiobutton2"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmit降序"
                />	
            
        </RadioGroup>

    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
   			 android:layout_height="30dp"
   	 		android:background="@color/graye5"
   	 		android:orientation="horizontal"
        >
        
        <TextView
            android:id="@+id/traffic_234g_tv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2/3/4g"
            android:layout_weight="1"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/traffic_wifi_tv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="wifi"
            android:layout_weight="1"
            android:textColor="@color/black" />
        
        
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
   			 android:layout_height="30dp"
   	 		android:background="@color/graye5"
   	 		android:orientation="horizontal"
        >
        
        <TextView
            android:id="@+id/traffic_234g_today_tv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2/3/4g_today"
            android:layout_weight="1"
            android:textColor="@color/rose_red" />
        <TextView
            android:id="@+id/traffic_wifi_today_tv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="wifi_today"
            android:layout_weight="1"
            android:textColor="@color/rose_red" />
        
        
        
    </LinearLayout>
    
    
    
    
    
   <LinearLayout 
       android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
       
       >
       
       <ListView 
           android:id="@+id/traffic_content_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:cacheColorHint="@android:color/white"
           
           />
       
   </LinearLayout>

</LinearLayout>
